  <script>
    const demoProducts = [
      {id:1,name:'Veste Confort',price:49,img:'https://www.jules.com/dw/image/v2/AAHK_PRD/on/demandware.static/-/Sites-core-master-catalog/default/dwf158008e/images/1007843_11846_V1.jpg?sw=1300&sh=1300&sm=fit'},
      {id:2,name:'Pull Douillet',price:39,img:'https://gemo-gemo-fr-storage.omn.proximis.com/Imagestorage/imagesSynchro/0/0/687775cc45b49623b2ed915d4748f1d5975f3c1c_826556_1.jpeg'},
      {id:3,name:'Pantalon Chic',price:59,img:'https://images.unsplash.com/photo-1520975917368-9c4b2b5f0a51?auto=format&fit=crop&w=800&q=60'},
      {id:4,name:'Robe Ã‰lÃ©gante',price:69,img:'https://www.twinset.com/dw/image/v2/BCKJ_PRD/on/demandware.static/-/Sites-master-catalog/default/dw845d1d07/images/TwinSet/Images/Catalog/192TQ2019-00740-04.JPG'},
      {id:5,name:'T-shirt Basique',price:19,img:'https://medias3.graindemalice.fr/products/1800x2128/842267/6371/842267_6371_1.jpg'},
      {id:6,name:'Ã‰charpe Mode',price:14,img:'https://img.static-rmg.be/a/view/q75/w840/h/2523769/cos-jpg.jpg'}
    ];

    const productsEl = document.getElementById('products');

    demoProducts.forEach(p=>{
      const el = document.createElement('div');
      el.className='product';
      el.innerHTML=`
        <img src="${p.img}">
        <div class="info">
          <h5>${p.name}</h5>
          <div class="price-tag">${p.price}â‚¬</div>
          <button class="btn" style="margin-top:10px" onclick="addToCart(${p.id})">Ajouter</button>
        </div>
      `;
      productsEl.appendChild(el);
    });

    let cart = [];

    function addToCart(id){
      cart.push(demoProducts.find(p=>p.id===id));
      renderCart();
    }

    function renderCart(){
      const list = document.getElementById('cartList');
      list.innerHTML = '';

      if(cart.length === 0){
        list.innerHTML = '<p style="color:#777">Panier vide</p>';
        document.getElementById('cartTotal').innerText = '0â‚¬';
        return;
      }

      let total = 0;
      cart.forEach(item=>{
        total+=item.price;
        list.innerHTML += `<div style="display:flex;justify-content:space-between;padding:6px 0">
          <div>${item.name}</div><div>${item.price}â‚¬</div>
        </div>`;
      });

      document.getElementById('cartTotal').innerText = total+'â‚¬';
    }

    document.getElementById('checkout').onclick = () => {
      if(cart.length===0) return alert("Panier vide ðŸ˜…");
      alert("Commande enregistrÃ©e (version dÃ©mo) !");
      cart=[];
      renderCart();
    };
  </script>
 <script>
document.addEventListener("DOMContentLoaded", () => {
  
  // ===== JOUR / NUIT =====
  const root = document.documentElement;
  let isNight = false;
  const toggleBtn = document.getElementById('toggleTheme');

  if(toggleBtn){
    toggleBtn.addEventListener('click', () => {
      const prices = document.querySelectorAll('.price');
      const buttons = document.querySelectorAll('.btn');
      if(!isNight){
        // Mode sombre
        root.style.setProperty('--bg', '#2c2c2c');
        root.style.setProperty('--card', '#3a3a3a');
        root.style.setProperty('--muted', '#b0b0b0');
        root.style.setProperty('--accent', '#555555');
        root.style.setProperty('--accent-2', '#777777');
        document.body.style.background = 'linear-gradient(180deg,#333,#2c2c2c)';

        prices.forEach(p => {
          p.style.background = '#3a3a3a';
          p.style.color = '#fff';
          p.querySelectorAll('h4, .cost, div').forEach(el => el.style.color = '#fff');
          p.classList.remove('best');
        });

        buttons.forEach(b => {
          b.style.backgroundColor = '#555';
          b.style.color = '#eee';
        });

      } else {
        // Mode jour
        root.style.setProperty('--bg', '#f7f6f5');
        root.style.setProperty('--card', '#ffffff');
        root.style.setProperty('--muted', '#6b6b6b');
        root.style.setProperty('--accent', '#FF6A00');
        root.style.setProperty('--accent-2', '#EE0979');
        document.body.style.background = 'linear-gradient(180deg,#fbfaf9,#f0efef)';

        prices.forEach((p,i) => {
          p.style.background = '';
          p.style.color = '';
          p.querySelectorAll('h4, .cost, div').forEach(el => el.style.color = '');
          if(i===1) p.classList.add('best'); // Pro garde l'effet
        });

        buttons.forEach(b => {
          b.style.backgroundColor = '';
          b.style.color = '';
        });
      }
      isNight = !isNight;
    });
  }
});
</script>





